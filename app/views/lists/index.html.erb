<h1>To-Do Lists</h1>

<p><%= link_to 'Add a to-do list', new_list_path, class: 'btn btn-default' %></p>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%= list.title %></td>
    <td><%= link_to 'Show', list_tasks_path(list) %></td>
    <td><%= link_to 'Edit', edit_list_path(list) %></td>
    <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>