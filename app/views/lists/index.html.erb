<h1>To-Do Lists</h1>

<p><%= link_to 'Add a to-do list', new_list_path, class: 'btn btn-default' %></p>

<div class="row">
  <% @lists.each do |list| %>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail">
        <div class="caption">
          <h2><%= link_to list.title, list_path(list) %></h2>
          <p><%= link_to '', list_path(list), class: 'btn btn-default btn- glyphicon glyphicon-eye-open', role: 'button' %> <%= link_to '', edit_list_path(list), class: 'btn btn-default glyphicon glyphicon-pencil', role: 'button' %> <%= link_to '', list, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default glyphicon glyphicon-remove', role: 'button' %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>